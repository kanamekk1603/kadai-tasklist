<div class="row">
  <div class="col-xs-12 col-sm-8 col-lg-6">
    <%= form_for(task) do |f| %>
     <% if task.errors.any? %>
      <div id="error_explanation">
       <ul>
        <% task.errors.full_messages.each do |task| %>
          <li><%= task %></li>
        <% end %>
       </ul>
      </div>
     <% end %>
  
    <div class="form-group">
     <%= f.label :status, 'ステイタス' %>
     <%= f.text_field :status %>
    </div>
  
    <div class="form-group">
     <%= f.label :content, 'メッセージ' %>
     <%= f.text_field :content %>
    </div>

     <%= f.submit '投稿' %>
    <% end %>
  </div>
</div>